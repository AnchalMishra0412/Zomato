pipeline {
    agent any
    tools {
        jdk 'JAVA_HOME'
        nodejs 'nodejs25'
          }
    stages {
       
        stage ("Git Checkout") 
          {
            steps {
                git 'https://github.com/AnchalMishra0412/Zomato.git'
                  }
           }
         
        stage ("Build Docker Image") {
            steps {
                sh "docker build -t anchalmishra04/zomatoapp:1.0 ."
            }
        }
stage ("Tag & Push to DockerHub") {
            steps {
                script {
                    withCredentials([usernamePassword(credentialsId: 'docker-login', passwordVariable: 'dockerhubpass', usernameVariable: 'dockerhublogin')]){
                        sh 'docker login -u ${dockerhublogin} -p ${dockerhubpass}'
                        sh "docker push anchalmishra04/zomatoapp:1.0 "
                    }
                }
            }
        }
          }
}
