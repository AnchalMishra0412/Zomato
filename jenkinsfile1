pipeline {
    agent any
    tools {
        jdk 'JAVA_HOME'
        nodejs 'nodejs25'
          }
    stages {
       
        stage ("Git Checkout") 
          {
            steps {
                git 'https://github.com/AnchalMishra0412/Zomato.git'
                  }
           }
         
        stage ("Build Docker Image") {
            steps {
                sh "docker build -t anchalmishra04/zomatoapp:1.0 ."
            }
        }
          }
}
